rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get current user's data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Helper function to check if user is active (approved)
    function isActiveUser() {
      let userData = getUserData();
      return isAuthenticated() && (userData.status == 'active' || userData.active == true);
    }
    
    // Helper function to check if user is admin (global role)
    function isGlobalAdmin() {
      return isAuthenticated() && getUserData().role == 'admin';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can always read their own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Admins can read all users
      allow read: if isGlobalAdmin();
      
      // Users can create their own profile on first login
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Admins can update any user, users can update themselves (except protected fields)
      allow update: if isGlobalAdmin() || 
                       (request.auth.uid == userId && 
                        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status', 'companyRoles']));
    }
    
    // Companies collection
    match /companies/{companyId} {
      // Global admin can do anything
      allow read, write: if isGlobalAdmin();
      
      // Active users can read companies
      allow read: if isActiveUser();
    }
    
    // Transactions collection
    match /transactions/{transactionId} {
      // Global admin can do anything
      allow read, write: if isGlobalAdmin();
      
      // Active users can read and create transactions
      allow read, create: if isActiveUser();
      
      // Active users can update transactions
      allow update: if isActiveUser();
    }
    
    // Cost Centers collection
    match /costCenters/{costCenterId} {
      // Global admin can do anything
      allow read, write: if isGlobalAdmin();
      
      // Active users can read
      allow read: if isActiveUser();
    }
    
    // Entities (suppliers/clients) collection
    match /entities/{entityId} {
      // Global admin can do anything
      allow read, write: if isGlobalAdmin();
      
      // Active users can read
      allow read: if isActiveUser();
    }
    
    // Audit Logs
    match /auditLogs/{logId} {
      // Global admin can read
      allow read: if isGlobalAdmin();
      
      // Active users can create audit logs
      allow create: if isActiveUser();
      
      // Audit logs are immutable
      allow update, delete: if false;
    }
    
    // Payment Batches
    match /paymentBatches/{batchId} {
      // Global admin can do anything
      allow read, write: if isGlobalAdmin();
      
      // Active users can read and write
      allow read, write: if isActiveUser();
    }
    
    // Recurring Templates
    match /recurringTemplates/{templateId} {
      // Global admin can do anything
      allow read, write: if isGlobalAdmin();
      
      // Active users can read and write
      allow read, write: if isActiveUser();
    }
    
    // Notifications
    match /notifications/{notificationId} {
      // Users can manage their own notifications
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
      
      // Active users can create notifications
      allow create: if isActiveUser();
    }
    
    // Budgets collection (if it exists)
    match /budgets/{budgetId} {
      // Global admin can do anything
      allow read, write: if isGlobalAdmin();
      
      // Active users can read
      allow read: if isActiveUser();
    }
  }
}